{
    "compilerOptions": {
      "outDir": "public/js", // Directory for generated JS files
      "rootDir": "resources/js",
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "resources/js/**/*.tsx",
      "resources/js/types.ts"
    ]
}  